<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/show_image"
                android:layout_width="300dp"
                android:layout_height="300dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="116dp"
                        android:layout_height="40dp"
                        android:background="@drawable/user_pic"
                        android:gravity="center"/>

                    <TextView
                        android:gravity="center"
                        android:id="@+id/show_user"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="116dp"
                        android:layout_height="40dp"
                        android:background="@drawable/phone_pic"
                        android:gravity="center"/>

                    <TextView
                        android:gravity="center"
                        android:id="@+id/show_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="116dp"
                        android:layout_height="40dp"
                        android:background="@drawable/price_pic"
                        android:gravity="center"/>

                    <TextView
                        android:gravity="center"
                        android:id="@+id/show_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/show_discription"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:hint="详细信息"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="138dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_corner"
                android:hint="确认" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>